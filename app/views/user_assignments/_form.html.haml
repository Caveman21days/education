.col-12
  = form_for [@assignmentable, @user_assignment], class: "form-horizontal" do |f|

    .form-group.row
      %label.col-2.col-form-label.text-right Пользователь
      .col-4#curator
        = f.select :user_id, {}, {}, { class: "form-control" } do
          - User.all.each do |u|
            = content_tag(:option, "#{u.f_name} #{u.l_name}", value: u.id)

    .form-group.row
      %label.col-2.col-form-label.text-right Роль
      .col-4
        = f.select :role_id, {}, {}, { class: "form-control" } do
          - Role.all.each do |r|
            = content_tag(:option, r.name, value: r.id)

    .row
      .col-12
        = f.submit "Сохранить", class: "btn btn-outline-secondary btn-sm"
        %a.btn.btn-outline-secondary.btn-sm{ href: request.referer } Назад