.page-content
  .fancy-table-container.projects-table
    %table
      %thead
        %tr
          %th.name Название
          %th.short-description Краткое описание
          %th.cofield Область применения
          %th.stage Стадия разработки
          %th.bortnik Бортник
          %th.nti НТИ
      %tbody
        - projects.each do |project|
          %tr
            %th
              - if can? :read, project && project.check_access("card", current_user)
                = link_to project.name, project_path(project)
              - else
                = project.name
            %td
              = project.short_description
            %td
              - if project.cofield.nil?
                = '—'
              - else
                = project.cofield.name
            %td
              = stage_name(project)
            %td
              = bortnik_name(project)
            %td
              = nti_name(project)
