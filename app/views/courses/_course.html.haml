.col-12.card
  .row
    .col-12.card-header
      %h5.text-left= course.name
    .col-12.card-body
      - if controller_name == "courses"
        %p= markdown(course.description)
        - unless course.attachments.empty?
          %hr
          %p Файлы:
          = render partial: 'shared/nested_form/attachments', locals: { obj: course }

      - else
      
        %p= course.short_description
      - if can? :read, course
        = link_to 'Перейти', course_path(course), class: "btn btn-outline-secondary btn-sm" if controller_name != 'courses'

      - if controller_name != "fields"
        - if can? :update, course
          = link_to 'Редактировать', edit_course_path(course), class: "btn btn-outline-secondary btn-sm"
          = link_to 'Настроить', course_user_assignments_path(course), class: "btn btn-outline-secondary btn-sm"
