.col-12
  = form_for @topic, html: {class: "form-horizontal"} do |f|

    .form-group.row
      %label.col-2.col-form-label.text-right Заголовок
      .col-10
        = f.text_field :title, placeholder: "Заголовок", autofocus: true, class: "form-control"

    .form-group.row
      %label.col-2.col-form-label.text-right Описание
      .col-10
        = f.text_area :body, placeholder: "Описание", class: "form-control", rows: 4

    .form-group.row
      %label.col-2.col-form-label.text-right Раздел
      .col-10
        = f.select :section, {}, {}, { class: "form-control" } do
          - Topic.topic_sections.each do |section|
            = content_tag(:option, section[1], value: section[1])

    .row
      .col-12
        = f.submit "Сохранить", class: "btn btn-outline-secondary btn-sm"

        - if @topic.persisted? && can?(:destroy, @topic)
          = link_to "Удалить", topic_path(@topic.id), method: :delete, class: "btn btn-outline-secondary btn-sm", data: { confirm: "Вы уверены?" }

        %a.btn.btn-outline-secondary.btn-sm{ href: request.referer } Назад